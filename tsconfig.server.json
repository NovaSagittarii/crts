{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["apps/server/src/**/*", "packages/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "conway-rts",
    "apps/web",
    "tests",
    "**/*.test.ts"
  ]
}
