{
  "name": "crts",
  "version": "0.0.1",
  "description": "Multiplayer Conway's Game of Life with Socket.IO",
  "type": "module",
  "main": "apps/server/src/server.ts",
  "imports": {
    "#conway-core": {
      "development": "./packages/conway-core/index.ts",
      "default": "./dist/packages/conway-core/index.js"
    },
    "#rts-engine": {
      "development": "./packages/rts-engine/index.ts",
      "default": "./dist/packages/rts-engine/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/apps/server/src/server.js",
    "dev": "concurrently \"vite\" \"NODE_OPTIONS=--conditions=development tsx watch apps/server/src/server.ts\"",
    "dev:server": "NODE_OPTIONS=--conditions=development tsx watch apps/server/src/server.ts",
    "preview": "vite preview",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --config vitest.config.ts",
    "test:unit": "vitest run --config vitest.config.ts --dir packages",
    "test:integration": "vitest run --config vitest.config.ts --dir tests/integration",
    "test:watch": "vitest"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@eslint/js": "^9.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.3.3",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.15.0",
    "typescript-eslint": "^8.26.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "author": "",
  "license": "ISC"
}
